
@{
    ViewData["Title"] = "Add";
}

@model NewsApp.Models.Domain.News


<div class="container mt-5">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            @if (TempData["msg"] != null)
            {
                <div class="alert alert-dark mt-3">@TempData["msg"]</div>
            }

            <form asp-action="Add" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input type="text" asp-for="Title" class="form-control">
                </div>
                <div class="message-box pd-x-28 error mb-3">
                    <span asp-validation-for="Title" style="color:red"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Body" class="form-label">Body</label>
                    <textarea asp-for="Body" class="form-control"></textarea>
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Body" style="color:red"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">Image</label>
                    <input type="file" asp-for="ImageFile" class="form-control">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="ImageFile" style="color:red"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Categories" class="form-label">Categories</label>
                    <select asp-items="Model.CategoryList" asp-for="Categories" class="form-select" multiple size="5" style="width:100%">
                        <option value="">--Select--</option>
                    </select>
                </div>
                <div class="message-box pd-x-28 error"  >
                    <span asp-validation-for="Categories" style="color:red"></span>
                </div>


                <button type="submit" class="btn btn-primary mt-4">Submit</button>
                <a class="btn btn-secondary mt-4" href="/News/NewsList">All records</a>
            </form>

            
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>


