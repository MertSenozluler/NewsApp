
@{
    ViewData["Title"] = "Edit";
}

@model NewsApp.Models.Domain.News

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <h2>Update News</h2>

                <input type="hidden" class="input" asp-for="Id" />
                <input type="hidden" class="input" asp-for="NewsImage" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input type="text" asp-for="Title" class="form-control">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Body" class="form-label">Body</label>
                    <textarea asp-for="Body" class="form-control"></textarea>

                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Body"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">Image</label>
                    <input type="file" asp-for="ImageFile" class="form-control">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="ImageFile"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Categories" class="form-label">Categories</label>
                    <select asp-items="Model.MultiCategoryList" asp-for="Categories" class="input" multiple>
                        <option value="">--Select--</option>
                    </select>
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Categories"></span>
                </div>


                @if (TempData["msg"] != null)
                {
                    <div class="alert mb-1">@TempData["msg"]</div>
                }


                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-sec" href="/News/NewsList">All records</a>
            </form>
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>


